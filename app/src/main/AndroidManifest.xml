<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ray.mulitfunctionaldryer">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.NOTIFICATION_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.ray.mulitfunctionaldryer.util.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MulitFunctionalDryer"
        >
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/Activity.Theme"
            android:persistableMode="persistAcrossReboots"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SelectBTActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme">
        </activity>
        <activity
            android:name=".view.ConsoleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme">
        </activity>
    </application>


</manifest>